<%= form_for(@site, :html => { :class => "form-stacked" }) do |f| %>
  <% if @site.errors.any? %> 
    <div id="error_explanation">
      <h2><%= pluralize(@site.errors.count, "error") %> prohibited this site from being saved:</h2>

      <ul>
      <% @site.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <fieldset> 
    <div class="clearfix">
      <%= f.label :name, 'Name *' %>
      <div class="input">
        <%= f.text_field :name, :class => 'xlarge' %>
        <span class="help-block">ie: <i>latest news on cnn.com</i></span>
      </div>
    </div>
    
    <div class="clearfix">
      <%= f.label :url, 'URL *' %>
      <div class="input">
        <%= f.text_field :url, :class => 'xlarge' %>
        <span class="help-block">ie: <i>http://www.cnn.com</i></span>
      </div>
    </div>
    
    <div class="clearfix">
      <%= f.label :selector, 'Selector *' %>
      <div class="input">
        <%= f.text_field :selector, :class => 'xlarge' %>
        <span class="help-block">ie: <i>#content > .news</i></span>
      </div>
    </div>
    
    <div class="clearfix">
      <%= f.label :email, 'E-mail' %>
      <div class="input">
        <%= f.email_field :email, :class => 'xlarge' %>
        <span class="help-block">ie: <i>john@example.com</i></span>
      </div>
    </div>
  </fieldset>
    
  <div class="actions">
    <%= f.submit :class => 'btn large primary' %>
    &nbsp;&nbsp;<%= link_to 'Cancel', :back %>
    <% unless @site.new_record? %>
      <div class="right">
        <%= link_to 'Delete', @site, confirm: 'Are you sure?', method: :delete, :class => 'btn danger ', 'data-skip-pjax' => true%>
      </div>
    <% end %>
  </div>
<% end %>