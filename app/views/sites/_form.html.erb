<%= form_for(@site, :html => { :class => "form-stacked" }) do |f| %>
  <% if @site.errors.any? %> 
    <div id="error_explanation">
      <h2><%= pluralize(@site.errors.count, "error") %> prohibited this site from being saved:</h2>

      <ul>
      <% @site.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <fieldset> 
    <div class="clearfix">
      <%= f.label :name %>
      <div class="input">
        <%= f.text_field :name, :class => 'xlarge' %>
      </div>
    </div>
    
    <div class="clearfix">
      <%= f.label :url %>
      <div class="input">
        <%= f.text_field :url, :class => 'xlarge' %>
      </div>
    </div>
    
    <div class="clearfix">
      <%= f.label :selector %>
      <div class="input">
        <%= f.text_field :selector, :class => 'xlarge' %>
      </div>
    </div>
    
    <div class="clearfix">
      <%= f.label :email %>
      <div class="input">
        <%= f.text_field :email, :class => 'xlarge' %>
      </div>
    </div>
  </fieldset>
    
  <div class="actions">
    <%= f.submit :class => 'btn primary' %>
  </div>
<% end %>