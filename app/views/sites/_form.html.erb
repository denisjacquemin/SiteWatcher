<%= form_for(@site, :html => { :class => "form-stacked" }) do |f| %>
  <% if @site.errors.any? %> 
    <div id="error_explanation">
      <h2><%= pluralize(@site.errors.count, "error") %> prohibited this site from being saved:</h2>

      <ul>
      <% @site.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <fieldset> 
    <div class="clearfix">
      <%= f.label :name, 'Name *' %>
      <div class="input">
        <%= f.text_field :name, :class => 'xlarge' %>
        <span class="help-block">Simple description of this watcher</span>
      </div>
    </div>
    
    <div class="clearfix">
      <%= f.label :url, 'URL *' %>
      <div class="input">
        <%= f.text_field :url, :class => 'xlarge' %>
        <span class="help-block">The address of the page to monitor. ie: <i>http://www.example.com</i></span>
      </div>
    </div>
    
    <div class="clearfix">
      <%= f.label :selector, 'Selector *' %>
      <div class="input">
        <%= f.text_field :selector, :class => 'xlarge' %>
        <span class="help-block">Any css3 selector is valid. ie: <i>#content > .news</i></span>
      </div>
    </div>
    
    <div class="clearfix">
      <%= f.label :email, 'E-mail' %>
      <div class="input">
        <%= f.text_field :email, :class => 'xlarge' %>
        <span class="help-block">Fill in this field to enable alerts. ie: john@example.com</span>
      </div>
    </div>
  </fieldset>
    
  <div class="actions">
    <%= f.submit :class => 'btn primary' %>
  </div>
<% end %>