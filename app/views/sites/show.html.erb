<ul class="breadcrumb">
  <li>Dashboard<span class="separator"> / </span></li>
  <li>Site Details</li>
</ul>
<div class="sidebar">
  <div class="notice">
    <h4>Snippets</h4>
    <ul>
      <% @site.snippets.each do |snippet| %>
        <li>
          <input type="checkbox" value="<%= snippet.id %>" /> <%= snippet.created_at %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
<div class="content">
  <div class="block">
    <p id="notice"><%= notice %></p>
    <h1>
      <%= @site.name %>
      <div id="site-url"><span class="url-label">Url: </span><%= @site.url %></div>
      <div id="site-selector"><span class="selector-label">Selector: </span><%= @site.selector %></div>
    </h1>
    <div id="snippets-selector">
      Compare between
      <%= collection_select(:site, :snippets, @site.snippets, :id, :created_at, :prompt => true) %> and
      <%= collection_select(:site, :snippets, @site.snippets, :id, :created_at, :prompt => true) %>
      <input type="button" class="btn" id="compare" value="Compare" />
      <div id="compare-result">
      <%= raw DiffHtml.diff(Snippet.find(1).content, Snippet.find(2).content) %>
      
      </div>
    </div>
    <div class="actions">
      <%= link_to 'Delete', @site, confirm: 'Are you sure?', method: :delete, :class => 'btn danger' %>
    </div>
  </div>
</div>
