<ul class="breadcrumb">
  <li>Dashboard<span class="separator"> / </span></li>
  <li>Site Details</li>
</ul>

<div class="contentt">
  <div class="block">
    <p id="notice"><%= notice %></p>
    <h1>
      <%= @site.name %>
    </h1>
    <div id="snippets-selector">    
    <%= form_tag('compare', :format => :json, :remote => true, :id => "compare_it") do %>
      <%= hidden_field_tag "selection[site_id]", @site.id %>
      Compare between
      <%= select_tag "selection[first]", options_from_collection_for_select(@site.snippets, "id", "created_at") %>
      and
      <%= select_tag "selection[second]", options_from_collection_for_select(@site.snippets, "id", "created_at") %>
      <%= submit_tag 'compare', :class => 'btn primary'%>
    <% end %>
    </div>

    <div id="compare-result">
      <iframe src="<%= @site.url %>" width="100%" height="700px" border="0"></iframe>
    </div>
    <div class="actions">
      <%= link_to 'Delete', @site, confirm: 'Are you sure?', method: :delete, :class => 'btn danger' %>
    </div>
  </div>
</div>
